 	struct snd_soc_pcm_runtime *wm5102_rtd;
 	struct snd_soc_codec *wm5102_codec;
+	struct snd_soc_dai *wm5102_codec_dai;
 
 	wm5102_rtd = snd_soc_get_pcm_runtime(card, card->dai_link[DAI_WM5102].name);
 	if (!wm5102_rtd) {
